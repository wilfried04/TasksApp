<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" >Tasks_Name</th>
      <th scope="col" >Tasks_Details</th>
      <th scope="col"> Deadilne</th>
      <th scope="col">Statuts</th>
      <th scope="col">Priority</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      <%@tasks.each do |task|%>
    <tr>
      <td><%=link_to "#{task.name}", task_path(task.id)%></td>
      <td><%=task.detail%></td>
      <td><%=task.deadline%></td>
      <td><%=task.statut%></td>
      <td><%=task.priority%></td>
          <td>        <!--btn-sm réduit à la taille minmale le bouton-->
            <%= link_to "See", task_path(task.id), :class => "btn btn-outline-success"%>  
            <%= link_to "Edit", edit_task_path(task.id),  :class => "btn btn-outline-primary"%>
            <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: 'Are you sure?'},  :class => "btn btn-outline-danger"%> 
          </td>
    </tr>
      
      
    <% end %>
  </tbody>
</table>
<div class="page">
  <%= paginate @tasks %>
</div>

