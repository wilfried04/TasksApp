<div class="container">
  <div class="container loggin_form">
      <div class="form-group">
        <h2>login</h2>
        <%= form_with(scope: :session, url:sessions_path,local:true) do|f| %>
        <%= f.label :email %>
        <%= f.email_field :email,:type=>"email",
                                :class=>"form-control",
                                :id=>"exampleInputEmail1" %>
        <%= f.label :password %>
        <%= f.password_field :password,:type=>"password",
                                :class=>"form-control",
                                :id=>"exampleInputPassword1" %>
        <br>
        <%= f.submit "Log in",:class=>"btn btn-primary" %>
        <% end %>
      </div>
  </div>
<div class="">
  <p id="loggin_form"> or <span class="badge badge-pill badge-light"><%=link_to "create new user",new_user_path %></span></p>
</div>
</div>
<%=render 'layouts/footer'%>
